@model Lab2Wordpress.Data.Entities.Theme

@{
    ViewBag.Title = "Themes";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="uk">
<head>
    <title>Theme</title>
</head>
<body>
<div>
    <td><a asp-controller="Themes" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a></td>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Primary Color</th>
            <th>Secondary Color</th>
            <th>Gradient</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@Model?.Id</td>
            <td>@Model?.PrimaryColor</td>
            <td>@Model?.SecondaryColor</td>
            <td>@Model?.Gradient</td>
        </tr>
        </tbody>
    </table>
</div>
</body>
</html>