@using Lab2Wordpress.Data.Entities
@model IList<Lab2Wordpress.Data.Entities.Theme>

@{
    ViewBag.Title = "Themes";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="uk">
<head>
    <title>Themes</title>
</head>
<body>
<div>
    <h3>Themes - @{@Model?.Count} records</h3>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Primary Color</th>
            <th>Secondary Color</th>
            <th>Gradient</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var theme in @Model ?? Enumerable.Empty<Theme>())
        {
            <tr>
                <td>@theme.Id</td>
                <td>@theme.PrimaryColor</td>
                <td>@theme.SecondaryColor</td>
                <td>@theme.Gradient</td>
                <td><a asp-controller="Themes" asp-action="GetById" asp-route-id="@theme.Id">View</a></td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "Themes", new { @theme.Id })">
                        @*<input type="hidden" name="column1" value="@theme.PrimaryColor" />
                        <input type="hidden" name="column1" value="@theme.SecondaryColor" />
                        <input type="hidden" name="column1" value="@theme.Gradient" />*@
                        <button type="submit">X</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>